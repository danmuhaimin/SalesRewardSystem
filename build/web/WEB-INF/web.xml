<?xml version="1.0" encoding="UTF-8"?>
<web-app version="3.1" xmlns="http://xmlns.jcp.org/xml/ns/javaee" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://xmlns.jcp.org/xml/ns/javaee http://xmlns.jcp.org/xml/ns/javaee/web-app_3_1.xsd">
    <servlet>
        <servlet-name>LoginServlet</servlet-name>
        <servlet-class>com.system.controller.LoginServlet</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>RegisterServlet</servlet-name>
        <servlet-class>com.system.controller.RegisterServlet</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>SuccessRegisterServlet</servlet-name>
        <servlet-class>com.system.view.SuccessRegisterServlet</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>ResetPasswordServlet</servlet-name>
        <servlet-class>com.system.controller.ResetPasswordServlet</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>SuccessResetPasswordServlet</servlet-name>
        <servlet-class>com.system.view.SuccessResetPasswordServlet</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>LogoutServlet</servlet-name>
        <servlet-class>com.system.controller.LogoutServlet</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>ViewSalesRankingServlet</servlet-name>
        <servlet-class>com.system.view.ViewSalesRankingServlet</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>ViewCurrentRewardServlet</servlet-name>
        <servlet-class>com.system.view.ViewCurrentRewardServlet</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>AdminViewSalesRankingServlet</servlet-name>
        <servlet-class>com.system.view.AdminViewSalesRankingServlet</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>UpdateEmployeeSaleServlet</servlet-name>
        <servlet-class>com.system.controller.UpdateEmployeeSaleServlet</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>DeleteEmployeeServlet</servlet-name>
        <servlet-class>com.system.controller.DeleteEmployeeServlet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>LoginServlet</servlet-name>
        <url-pattern>/LoginServlet</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>RegisterServlet</servlet-name>
        <url-pattern>/RegisterServlet</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>SuccessRegisterServlet</servlet-name>
        <url-pattern>/SuccessRegisterServlet</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>ResetPasswordServlet</servlet-name>
        <url-pattern>/ResetPasswordServlet</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>SuccessResetPasswordServlet</servlet-name>
        <url-pattern>/SuccessResetPasswordServlet</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>LogoutServlet</servlet-name>
        <url-pattern>/LogoutServlet</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>ViewSalesRankingServlet</servlet-name>
        <url-pattern>/ViewSalesRankingServlet</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>ViewCurrentRewardServlet</servlet-name>
        <url-pattern>/ViewCurrentRewardServlet</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>AdminViewSalesRankingServlet</servlet-name>
        <url-pattern>/AdminViewSalesRankingServlet</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>UpdateEmployeeSaleServlet</servlet-name>
        <url-pattern>/UpdateEmployeeSaleServlet</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>DeleteEmployeeServlet</servlet-name>
        <url-pattern>/DeleteEmployeeServlet</url-pattern>
    </servlet-mapping>
    <session-config>
        <session-timeout>
            30
        </session-timeout>
    </session-config>
</web-app>
